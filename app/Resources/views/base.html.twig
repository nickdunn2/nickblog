<!-- app/Resources/views/base.html.twig -->

<!-- See section 6.5 Create single and two-column layouts for main content and sidebar at this link: http://prideparrot.com/blog/archive/2014/4/blog_template_using_twitter_bootstrap3_part1 -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Nick Bootstrap Blog in Symfony">
    <meta name="author" content="Nick Dunn">
    <title>Nick Blog{% block title %} - Home{% endblock %}</title>

    <!-- Bootstrap CSS files -->
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/custom.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
</head>
<body>
    <!-- Jquery and Bootstrap Script files -->
    {% block javascripts %}
        <script src="{{ asset('jquery-1.11.3.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {% endblock %}

    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
        <div class="container">
            <!-- Logo, Navigation and Search Bar -->
            {% block navigation %}
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="{{ path('BloggerBlogBundle_homepage') }}" class="navbar-brand">Nick Dunn</a>
                </div>
                <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                    <form class="navbar-form navbar-right" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('BloggerBlogBundle_homepage') }}">Home</a></li>
                        <li><a href="{{ path('BloggerBlogBundle_about') }}">About</a></li>
                        <li><a href="{{ path('BloggerBlogBundle_contact') }}">Contact</a></li>
                    </ul>
                </nav>
            {% endblock %}
        </div>

    </header>

    <div id="body" class="container">
        <!-- Site's main content -->
        <div class="row">
            <div class="col-md-8">
                {% block body %}
                    -- Main Posts --
                {% endblock %}
            </div>

            <div class="col-md-4">
                {% block sidebar %}
                    -- SIDEBAR --
                {% endblock %}
            </div>
        </div>



    </div>

    <footer>
        <div class="container">
            <!-- Copyright information -->
            {% block footer %}
                -- Copyright information --
            {% endblock %}
        </div>
    </footer>



</body>
</html>